#include <Arduino.h>
#include <WiFi.h>
#include <WiFiClientSecure.h>
#include <driver/i2s.h>

// ================= 1. CẤU HÌNH WIFI & TELEGRAM =================
const char* ssid = "Nguyen Ngoc";
const char* password = "03032001";
// Token và ChatID của bạn
const char* botToken = "8521958601:AAF3a6g7xJNuRWq3ymr6CcaDS5X2sU2-aFM"; 
const char* chatID = "8519338843"; 

// ================= 2. CẤU HÌNH CHÂN (THEO CODE BẠN GỬI) =================
// SCK -> GPIO 14
#define I2S_SCK     14 
// WS  -> GPIO 15 
#define I2S_WS      15 
// SD  -> GPIO 16
#define I2S_SD      16 

// LƯU Ý PHẦN CỨNG: 
// - VDD Mic -> 3.3V
// - GND Mic -> GND
// - L/R Mic -> GND (Để chọn kênh trái/Only Left)

// ================= 3. CẤU HÌNH ÂM THANH =================
#define SAMPLE_RATE     16000
#define RECORD_TIME_SEC 2      // Thu 2 giây
#define GAIN_FACTOR     10     // Tăng âm lượng

#define TOTAL_SAMPLES   (SAMPLE_RATE * RECORD_TIME_SEC)
#define DATA_SIZE       (TOTAL_SAMPLES * 2) // 2 byte mỗi mẫu

int16_t audioBuffer[TOTAL_SAMPLES];

struct WavHeader {
  char riff[4]; uint32_t overallSize; char wave[4]; char fmtChunkMarker[4];
  uint32_t lengthOfFmt; uint16_t formatType; uint16_t channels; uint32_t sampleRate;
  uint32_t byteRate; uint16_t blockAlign; uint16_t bitsPerSample; char dataChunkHeader[4];
  uint32_t dataSize;
};

// Cấu hình I2S
i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = SAMPLE_RATE,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_16BIT,
    .channel_format = I2S_CHANNEL_FMT_ONLY_LEFT, 
    .communication_format = I2S_COMM_FORMAT_I2S,
    .intr_alloc_flags = ESP_INTR_FLAG_LEVEL1,
    .dma_buf_count = 8,
    .dma_buf_len = 64,
    .use_apll = false
};

i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num = I2S_WS,
    .data_out_num = I2S_PIN_NO_CHANGE,
    .data_in_num = I2S_SD
};

// --- HÀM TẠO HEADER WAV ---
WavHeader createWavHeader(int sampleRate, int dataSize) {
    WavHeader header;
    memcpy(header.riff, "RIFF", 4);
    header.overallSize = dataSize + 36;
    memcpy(header.wave, "WAVE", 4);
    memcpy(header.fmtChunkMarker, "fmt ", 4);
    header.lengthOfFmt = 16;
    header.formatType = 1; header.channels = 1; header.sampleRate = sampleRate;
    header.bitsPerSample = 16; header.byteRate = sampleRate * 2; header.blockAlign = 2;
    memcpy(header.dataChunkHeader, "data", 4);
    header.dataSize = dataSize;
    return header;
}

// --- HÀM THU ÂM ---
void recordAudio() {
    Serial.println("\n--- Bắt đầu thu âm ---");
    
    // Xóa buffer I2S để tránh nhiễu cũ
    i2s_zero_dma_buffer(I2S_NUM_0);
    delay(100); 

    // Thu âm
    size_t bytesRead;
    i2s_read(I2S_NUM_0, (char*)audioBuffer, DATA_SIZE, &bytesRead, portMAX_DELAY);
    
    // Xử lý Gain (Khuếch đại)
    long sum = 0; 
    for (int i = 0; i < TOTAL_SAMPLES; i++) {
        int32_t val = audioBuffer[i];
        sum += abs(val);
        val = val * GAIN_FACTOR; 
        if (val > 32767) val = 32767;
        if (val < -32768) val = -32768;
        audioBuffer[i] = (int16_t)val;
    }
    
    Serial.print("Thu xong. Năng lượng tín hiệu: ");
    Serial.println(sum);
}

// --- HÀM GỬI FILE (ĐÃ SỬA LỖI HTTP) ---
void sendVoiceToTelegram() {
    // Chỉ kết nối lại nếu mất mạng, không tắt bật liên tục
    if (WiFi.status() != WL_CONNECTED) {
        Serial.println("Mất kết nối! Đang kết nối lại WiFi...");
        WiFi.reconnect();
        unsigned long start = millis();
        while (WiFi.status() != WL_CONNECTED && millis() - start < 10000) {
            delay(100); Serial.print(".");
        }
        if (WiFi.status() != WL_CONNECTED) {
            Serial.println("\nKhông thể kết nối WiFi. Bỏ qua lần gửi này.");
            return;
        }
        Serial.println("\nWiFi đã kết nối lại.");
    }

    WiFiClientSecure client;
    client.setInsecure(); // Bỏ qua kiểm tra chứng chỉ SSL
    client.setTimeout(20000); // Timeout 20 giây

    Serial.println("Đang kết nối tới Telegram...");

    if (client.connect("api.telegram.org", 443)) {
        Serial.println("Đã kết nối Server. Đang gửi dữ liệu...");
        
        String boundary = "Esp32Boundary";
        WavHeader wavHead = createWavHeader(SAMPLE_RATE, DATA_SIZE);

        // Chuẩn bị Header và Tail của HTTP Multipart
        String head = "--" + boundary + "\r\n" +
                      "Content-Disposition: form-data; name=\"audio\"; filename=\"esp32_audio.wav\"\r\n" +
                      "Content-Type: audio/x-wav\r\n\r\n";
        String tail = "\r\n--" + boundary + "--\r\n";

        // Tính chính xác độ dài Content-Length
        uint32_t contentLength = head.length() + sizeof(wavHead) + DATA_SIZE + tail.length();

        // Gửi Header HTTP
        client.println("POST /bot" + String(botToken) + "/sendAudio?chat_id=" + String(chatID) + " HTTP/1.1");
        client.println("Host: api.telegram.org");
        client.println("Content-Type: multipart/form-data; boundary=" + boundary);
        client.println("Content-Length: " + String(contentLength));
        client.println("Connection: keep-alive");
        client.println();

        // Gửi Body Multipart
        client.print(head);
        client.write((uint8_t*)&wavHead, sizeof(wavHead));

        // CHIA NHỎ DỮ LIỆU ĐỂ GỬI (Chunking) - Fix lỗi tràn bộ đệm gửi
        uint8_t *pData = (uint8_t*)audioBuffer;
        size_t remaining = DATA_SIZE;
        size_t chunkSize = 1024; // Gửi mỗi lần 1KB

        while (remaining > 0) {
            size_t toSend = (remaining > chunkSize) ? chunkSize : remaining;
            client.write(pData, toSend);
            pData += toSend;
            remaining -= toSend;
            // Delay cực nhỏ để Watchdog không reset nếu mạng chậm
            delay(0); 
        }

        client.print(tail);

        // Đọc phản hồi từ Telegram để Debug
        Serial.println("Đã gửi xong. Đang chờ phản hồi...");
        while (client.connected()) {
            String line = client.readStringUntil('\n');
            if (line == "\r") break; // Hết header
        }
        
        // Đọc Body JSON trả về
        String response = client.readString();
        Serial.println("Phản hồi từ Telegram:");
        Serial.println(response); // <--- QUAN TRỌNG: Xem lỗi ở đây nếu có

        client.stop();
    } else {
        Serial.println("-> Lỗi: Không thể kết nối tới api.telegram.org (Check mạng/DNS)");
    }
}

void setup() {
    Serial.begin(115200);
    
    // Kết nối WiFi một lần duy nhất ở đây
    Serial.print("Đang kết nối WiFi: ");
    Serial.println(ssid);
    WiFi.begin(ssid, password);
    while (WiFi.status() != WL_CONNECTED) {
        delay(500); Serial.print(".");
    }
    Serial.println("\nWiFi đã kết nối!");
    Serial.print("IP: "); Serial.println(WiFi.localIP());

    // Cài đặt I2S
    i2s_driver_install(I2S_NUM_0, &i2s_config, 0, NULL);
    i2s_set_pin(I2S_NUM_0, &pin_config);
    
    Serial.println("Hệ thống sẵn sàng!");
}

void loop() {
    recordAudio();
    sendVoiceToTelegram();
    
    Serial.println("Chờ 5 giây trước khi thu tiếp...");
    delay(5000); // Tăng delay lên một chút để tránh spam server quá nhanh
}
