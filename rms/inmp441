/*
  === ESP32-C3 Super Mini + INMP441 + FFT (Sender Node - Slave) ===
  ğŸ“¡ Gá»­i dá»¯ liá»‡u dB + phÃ¢n tÃ­ch táº§n sá»‘ qua ESP-NOW Ä‘áº¿n Master
  ğŸµ Sá»­ dá»¥ng ArduinoFFT Ä‘á»ƒ phÃ¢n tÃ­ch Bass/Mid/Treble
  ğŸ”Œ PIN: WS=4, SD=5, SCK=6
  
  âœ… ÄÃƒ Sá»¬A: Callback cho ESP-IDF v5.5+
*/

#include <Arduino.h>
#include <driver/i2s.h>
#include <esp_now.h>
#include <WiFi.h>
#include <arduinoFFT.h>

// ==== PIN cho ESP32-C3 Super Mini ====
#define I2S_WS  4   // GPIO4 - LRCLK/WS
#define I2S_SD  5   // GPIO5 - DOUT/SD (Data)
#define I2S_SCK 6   // GPIO6 - BCLK/SCK

#define SAMPLE_RATE 16000
#define SAMPLES 512  // TÄƒng lÃªn 512 cho FFT tá»‘t hÆ¡n (pháº£i lÃ  lÅ©y thá»«a cá»§a 2)

// âš ï¸ QUAN TRá»ŒNG: Thay báº±ng MAC tháº­t cá»§a ESP32-S master
// Láº¥y tá»« Serial Monitor cá»§a Master khi khá»Ÿi Ä‘á»™ng
uint8_t masterAddress[] = {0xB8, 0xD6, 0x1A, 0xB8, 0x9F, 0x8C};

// ==== Cáº¥u trÃºc dá»¯ liá»‡u gá»­i Ä‘i ====
typedef struct {
  float dB;
  float bassLevel;    // 20-250 Hz
  float midLevel;     // 250-2000 Hz
  float trebleLevel;  // 2000-8000 Hz
  float dominantFreq; // Táº§n sá»‘ máº¡nh nháº¥t
  uint8_t micID;
} SoundData;

SoundData soundPacket;

// ==== FFT ====
ArduinoFFT<double> FFT = ArduinoFFT<double>();
double vReal[SAMPLES];
double vImag[SAMPLES];

void setupI2S() {
  i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = SAMPLE_RATE,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_32BIT,
    .channel_format = I2S_CHANNEL_FMT_ONLY_LEFT,
    .communication_format = I2S_COMM_FORMAT_I2S,
    .intr_alloc_flags = 0,
    .dma_buf_count = 8,
    .dma_buf_len = 64,
    .use_apll = false
  };
  i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num = I2S_WS,
    .data_out_num = I2S_PIN_NO_CHANGE,
    .data_in_num = I2S_SD
  };
  i2s_driver_install(I2S_NUM_0, &i2s_config, 0, NULL);
  i2s_set_pin(I2S_NUM_0, &pin_config);
  i2s_zero_dma_buffer(I2S_NUM_0);
}

double calculateRMS(int32_t *data, int samples) {
  double mean = 0;
  for (int i = 0; i < samples; i++) mean += data[i];
  mean /= samples;
  double sum = 0;
  for (int i = 0; i < samples; i++) {
    double x = (data[i] - mean) / 2147483648.0;
    sum += x * x;
  }
  return sqrt(sum / samples);
}

// ==== PhÃ¢n tÃ­ch FFT ====
void analyzeFFT(int32_t *buffer) {
  // Chuáº©n bá»‹ dá»¯ liá»‡u cho FFT
  for (int i = 0; i < SAMPLES; i++) {
    vReal[i] = (double)buffer[i] / 2147483648.0; // Normalize
    vImag[i] = 0;
  }

  // Thá»±c hiá»‡n FFT
  FFT.windowing(vReal, SAMPLES, FFT_WIN_TYP_HAMMING, FFT_FORWARD);
  FFT.compute(vReal, vImag, SAMPLES, FFT_FORWARD);
  FFT.complexToMagnitude(vReal, vImag, SAMPLES);

  // TÃ­nh Ä‘á»™ phÃ¢n giáº£i táº§n sá»‘
  double freqResolution = (double)SAMPLE_RATE / SAMPLES; // ~31.25 Hz

  // ==== PhÃ¢n tÃ­ch cÃ¡c dáº£i táº§n ====
  double bassSum = 0, midSum = 0, trebleSum = 0;
  int bassCount = 0, midCount = 0, trebleCount = 0;

  double maxMagnitude = 0;
  int maxIndex = 0;

  for (int i = 1; i < SAMPLES / 2; i++) { // Bá» DC component (i=0)
    double freq = i * freqResolution;
    double magnitude = vReal[i];

    // TÃ¬m táº§n sá»‘ máº¡nh nháº¥t
    if (magnitude > maxMagnitude) {
      maxMagnitude = magnitude;
      maxIndex = i;
    }

    // PhÃ¢n loáº¡i theo dáº£i táº§n
    if (freq >= 20 && freq < 250) {
      bassSum += magnitude;
      bassCount++;
    } else if (freq >= 250 && freq < 2000) {
      midSum += magnitude;
      midCount++;
    } else if (freq >= 2000 && freq < 8000) {
      trebleSum += magnitude;
      trebleCount++;
    }
  }

  // TÃ­nh trung bÃ¬nh vÃ  chuyá»ƒn sang dB
  soundPacket.bassLevel = bassCount > 0 ? 20 * log10(bassSum / bassCount + 0.0001) : 0;
  soundPacket.midLevel = midCount > 0 ? 20 * log10(midSum / midCount + 0.0001) : 0;
  soundPacket.trebleLevel = trebleCount > 0 ? 20 * log10(trebleSum / trebleCount + 0.0001) : 0;
  soundPacket.dominantFreq = maxIndex * freqResolution;
}

// ==== Callback ESP-NOW cho ESP-IDF v5.5+ ====
void OnDataSent(const wifi_tx_info_t *tx_info, esp_now_send_status_t status) {
  Serial.print("ğŸ“¤ Gá»­i Ä‘áº¿n Master: ");
  if (status == ESP_NOW_SEND_SUCCESS) {
    Serial.println("âœ… THÃ€NH CÃ”NG");
  } else {
    Serial.println("âŒ THáº¤T Báº I");
    Serial.println("   â†’ Kiá»ƒm tra MAC address Master");
    Serial.println("   â†’ Kiá»ƒm tra Master Ä‘Ã£ cháº¡y chÆ°a");
  }
}

void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("\nâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—");
  Serial.println("â•‘   ğŸ”Š ESP32-C3 + INMP441 + FFT (SLAVE)        â•‘");
  Serial.println("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n");
  
  setupI2S();

  // Ngáº¯t káº¿t ná»‘i WiFi cÅ© (náº¿u cÃ³)
  WiFi.disconnect();
  WiFi.mode(WIFI_STA);
  
  Serial.print("ğŸ“ Slave MAC Address: ");
  Serial.println(WiFi.macAddress());
  Serial.printf("ğŸ“¡ ESP-IDF Version: %s\n\n", esp_get_idf_version());

  // ==== Khá»Ÿi táº¡o ESP-NOW ====
  if (esp_now_init() != ESP_OK) {
    Serial.println("âŒ Lá»—i ESP-NOW init");
    while(1) delay(1000);
  }
  esp_now_register_send_cb(OnDataSent);

  // ==== ThÃªm Master peer ====
  esp_now_peer_info_t peerInfo = {};
  memcpy(peerInfo.peer_addr, masterAddress, 6);
  peerInfo.channel = 0;  // Auto channel
  peerInfo.encrypt = false;
  
  if (esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("âŒ ThÃªm peer tháº¥t báº¡i");
    Serial.println("   â†’ MAC address sai hoáº·c peer Ä‘Ã£ tá»“n táº¡i");
    while(1) delay(1000);
  }
  
  Serial.println("âœ… ESP-NOW sáºµn sÃ ng");
  Serial.printf("ğŸ¯ Sáº½ gá»­i Ä‘áº¿n Master: %02X:%02X:%02X:%02X:%02X:%02X\n",
                masterAddress[0], masterAddress[1], masterAddress[2],
                masterAddress[3], masterAddress[4], masterAddress[5]);
  
  // âš ï¸ Äá»”I Sá» NÃ€Y CHO Tá»ªNG SLAVE: 1, 2, 3, 4
  soundPacket.micID = 4;
  Serial.printf("ğŸ¤ Mic ID: %d\n", soundPacket.micID);
  Serial.println("\nğŸš€ Báº¯t Ä‘áº§u gá»­i dá»¯ liá»‡u...\n");
}

void loop() {
  size_t bytes_read;
  int32_t buffer[SAMPLES];
  
  // Äá»c dá»¯ liá»‡u tá»« mic
  i2s_read(I2S_NUM_0, (void*)buffer, sizeof(buffer), &bytes_read, portMAX_DELAY);

  // TÃ­nh tá»•ng dB (RMS)
  double rms = calculateRMS(buffer, SAMPLES);
  if (rms < 0.0000001) rms = 0.0000001;
  soundPacket.dB = 20 * log10(rms) + 94;

  // PhÃ¢n tÃ­ch FFT
  analyzeFFT(buffer);

  // Gá»­i qua ESP-NOW vá»›i kiá»ƒm tra lá»—i
  esp_err_t result = esp_now_send(masterAddress, (uint8_t*)&soundPacket, sizeof(soundPacket));
  
  if (result == ESP_OK) {
    Serial.print("ğŸ”„ ÄÃ£ gá»i esp_now_send - Chá» callback... ");
  } else {
    Serial.printf("âŒ esp_now_send FAILED (code %d): ", result);
    switch(result) {
      case ESP_ERR_ESPNOW_NOT_INIT: 
        Serial.println("ESP-NOW chÆ°a init"); 
        break;
      case ESP_ERR_ESPNOW_ARG: 
        Serial.println("Tham sá»‘ sai"); 
        break;
      case ESP_ERR_ESPNOW_INTERNAL: 
        Serial.println("Lá»—i ná»™i bá»™ - Thá»­ reset board"); 
        break;
      case ESP_ERR_ESPNOW_NO_MEM: 
        Serial.println("Háº¿t RAM"); 
        break;
      case ESP_ERR_ESPNOW_NOT_FOUND: 
        Serial.println("KhÃ´ng tÃ¬m tháº¥y peer - MAC sai!"); 
        break;
      default: 
        Serial.println("Lá»—i khÃ´ng xÃ¡c Ä‘á»‹nh");
    }
  }

  // In thÃ´ng tin
  Serial.println("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”");
  Serial.printf("ğŸ“Š Mic #%d | Tá»•ng: %.1f dB\n", soundPacket.micID, soundPacket.dB);
  Serial.printf("ğŸ¸ Bass:   %.1f dB (20-250Hz)\n", soundPacket.bassLevel);
  Serial.printf("ğŸ¤ Mid:    %.1f dB (250-2kHz)\n", soundPacket.midLevel);
  Serial.printf("ğŸº Treble: %.1f dB (2k-8kHz)\n", soundPacket.trebleLevel);
  Serial.printf("ğŸµ Dominant: %.0f Hz\n\n", soundPacket.dominantFreq);
  
  delay(200);
}
