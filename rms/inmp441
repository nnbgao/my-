/*
  === ESP32-C3 Super Mini + INMP441 (Sender Node - Slave) ===
  üì° G·ª≠i d·ªØ li·ªáu dB qua ESP-NOW ƒë·∫øn Master (ESP8266)
  ‚úÖ ƒê√É S·ª¨A: L·ªói khai b√°o tr√πng masterAddress
  üîå PIN cho ESP32-C3: WS=4, SD=5, SCK=6
*/

#include <Arduino.h>
#include <driver/i2s.h>
#include <esp_now.h>
#include <WiFi.h>

// ==== PIN cho ESP32-C3 Super Mini ====
#define I2S_WS  4   // GPIO4 - LRCLK/WS
#define I2S_SD  5   // GPIO5 - DOUT/SD (Data)
#define I2S_SCK 6   // GPIO6 - BCLK/SCK
#define SAMPLE_RATE 16000
#define SAMPLES 256

// ‚ö†Ô∏è QUAN TR·ªåNG: Thay b·∫±ng MAC th·∫≠t c·ªßa ESP8266 master
// ƒê·ªÉ l·∫•y MAC: ch·∫°y WiFi.macAddress() tr√™n ESP8266
uint8_t masterAddress[] = {0xB8, 0xD6, 0x1A, 0xB8, 0x9F, 0x8C};

typedef struct {
  float dB;
  uint8_t micID;
} SoundData;

SoundData soundPacket;

void setupI2S() {
  i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = SAMPLE_RATE,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_32BIT,
    .channel_format = I2S_CHANNEL_FMT_ONLY_LEFT,
    .communication_format = I2S_COMM_FORMAT_I2S,
    .intr_alloc_flags = 0,
    .dma_buf_count = 8,
    .dma_buf_len = 64,
    .use_apll = false
  };
  i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num = I2S_WS,
    .data_out_num = I2S_PIN_NO_CHANGE,
    .data_in_num = I2S_SD
  };
  i2s_driver_install(I2S_NUM_0, &i2s_config, 0, NULL);
  i2s_set_pin(I2S_NUM_0, &pin_config);
  i2s_zero_dma_buffer(I2S_NUM_0);
}

double calculateRMS(int32_t *data, int samples) {
  double mean = 0;
  for (int i = 0; i < samples; i++) mean += data[i];
  mean /= samples;
  double sum = 0;
  for (int i = 0; i < samples; i++) {
    double x = (data[i] - mean) / 2147483648.0;
    sum += x * x;
  }
  return sqrt(sum / samples);
}

// ==== Callback ESP-NOW (ESP-IDF v5+) ====
void OnDataSent(const uint8_t *mac_addr, esp_now_send_status_t status) {
  Serial.print("üì§ G·ª≠i ƒë·∫øn: ");
  for (int i = 0; i < 6; i++) {
    Serial.printf("%02X", mac_addr[i]);
    if (i < 5) Serial.print(":");
  }
  Serial.print(" -> ");
  Serial.println(status == ESP_NOW_SEND_SUCCESS ? "‚úÖ Th√†nh c√¥ng" : "‚ùå Th·∫•t b·∫°i");
}

void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("üîä ESP32-C3 Super Mini - INMP441 Sender");
  
  setupI2S();

  WiFi.mode(WIFI_STA);
  Serial.print("üìç MAC Address: ");
  Serial.println(WiFi.macAddress());

  // ==== Kh·ªüi t·∫°o ESP-NOW ====
  if (esp_now_init() != ESP_OK) {
    Serial.println("‚ùå L·ªói kh·ªüi t·∫°o ESP-NOW");
    return;
  }
  esp_now_register_send_cb(OnDataSent);

  // ==== Th√™m Master peer ====
  esp_now_peer_info_t peerInfo = {};
  memcpy(peerInfo.peer_addr, masterAddress, 6);  // ‚úÖ D√πng bi·∫øn global
  peerInfo.channel = 1;
  peerInfo.encrypt = false;
  
  if (esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("‚ùå Th√™m peer th·∫•t b·∫°i");
    return;
  }
  
  Serial.print("‚úÖ ƒê√£ th√™m Master: ");
  for (int i = 0; i < 6; i++) {
    Serial.printf("%02X", masterAddress[i]);
    if (i < 5) Serial.print(":");
  }
  Serial.println();

  soundPacket.micID = 1;  // C√≥ th·ªÉ ƒë·ªïi th√†nh 2, 3... n·∫øu c√≥ nhi·ªÅu slave
}

void loop() {
  size_t bytes_read;
  int32_t buffer[SAMPLES];
  
  // ƒê·ªçc d·ªØ li·ªáu t·ª´ mic I2S
  i2s_read(I2S_NUM_0, (void*)buffer, sizeof(buffer), &bytes_read, portMAX_DELAY);

  // T√≠nh RMS v√† chuy·ªÉn sang dB
  double rms = calculateRMS(buffer, SAMPLES);
  
  // ‚úÖ Tr√°nh log10(0) g√¢y l·ªói
  if (rms < 0.0000001) rms = 0.0000001;
  
  double dB = 20 * log10(rms) + 94;  // Tham chi·∫øu 94 dB SPL
  soundPacket.dB = dB;

  // G·ª≠i qua ESP-NOW
  esp_err_t result = esp_now_send(masterAddress, (uint8_t*)&soundPacket, sizeof(soundPacket));
  
  if (result != ESP_OK) {
    Serial.println("‚ö†Ô∏è L·ªói g·ª≠i ESP-NOW");
  }

  // In ra Serial Monitor
  Serial.print("üìä Mic #"); 
  Serial.print(soundPacket.micID);
  Serial.print(": "); 
  Serial.print(dB, 1); 
  Serial.println(" dB");
  
  delay(200);  // ‚úÖ Gi·∫£m t·ª´ 500ms xu·ªëng 200ms ƒë·ªÉ sampling nhanh h∆°n
}
