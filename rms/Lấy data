/*
  === ESP32-C3 Super Mini + INMP441 + FFT (Monitor Mode) ===
  üéµ ƒêo v√† hi·ªÉn th·ªã Bass/Mid/Treble + dB l√™n Serial Monitor
  üîå PIN: WS=4, SD=5, SCK=6
  
  ‚úÖ Kh√¥ng g·ª≠i ESP-NOW - Ch·ªâ ƒëo v√† in ra
*/

#include <Arduino.h>
#include <driver/i2s.h>
#include <arduinoFFT.h>

// ==== PIN cho ESP32-C3 Super Mini ====
#define I2S_WS  4   // GPIO4 - LRCLK/WS
#define I2S_SD  5   // GPIO5 - DOUT/SD (Data)
#define I2S_SCK 6   // GPIO6 - BCLK/SCK

#define SAMPLE_RATE 16000
#define SAMPLES 512  // FFT samples (ph·∫£i l√† l≈©y th·ª´a c·ªßa 2)

// ==== C·∫•u tr√∫c d·ªØ li·ªáu ƒëo ====
struct SoundData {
  float dB;
  float bassLevel;    // 20-250 Hz (magnitude)
  float midLevel;     // 250-2000 Hz (magnitude)
  float trebleLevel;  // 2000-8000 Hz (magnitude)
  float dominantFreq; // T·∫ßn s·ªë m·∫°nh nh·∫•t
};

SoundData soundData;

// ==== FFT ====
ArduinoFFT<double> FFT = ArduinoFFT<double>();
double vReal[SAMPLES];
double vImag[SAMPLES];

void setupI2S() {
  i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = SAMPLE_RATE,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_32BIT,
    .channel_format = I2S_CHANNEL_FMT_ONLY_LEFT,
    .communication_format = I2S_COMM_FORMAT_I2S,
    .intr_alloc_flags = 0,
    .dma_buf_count = 8,
    .dma_buf_len = 64,
    .use_apll = false
  };
  i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num = I2S_WS,
    .data_out_num = I2S_PIN_NO_CHANGE,
    .data_in_num = I2S_SD
  };
  i2s_driver_install(I2S_NUM_0, &i2s_config, 0, NULL);
  i2s_set_pin(I2S_NUM_0, &pin_config);
  i2s_zero_dma_buffer(I2S_NUM_0);
}

double calculateRMS(int32_t *data, int samples) {
  double mean = 0;
  for (int i = 0; i < samples; i++) mean += data[i];
  mean /= samples;
  double sum = 0;
  for (int i = 0; i < samples; i++) {
    double x = (data[i] - mean) / 2147483648.0;
    sum += x * x;
  }
  return sqrt(sum / samples);
}

// ==== Ph√¢n t√≠ch FFT ====
void analyzeFFT(int32_t *buffer) {
  // Chu·∫©n b·ªã d·ªØ li·ªáu cho FFT
  for (int i = 0; i < SAMPLES; i++) {
    vReal[i] = (double)buffer[i] / 2147483648.0; // Normalize
    vImag[i] = 0;
  }

  // Th·ª±c hi·ªán FFT
  FFT.windowing(vReal, SAMPLES, FFT_WIN_TYP_HAMMING, FFT_FORWARD);
  FFT.compute(vReal, vImag, SAMPLES, FFT_FORWARD);
  FFT.complexToMagnitude(vReal, vImag, SAMPLES);

  // T√≠nh ƒë·ªô ph√¢n gi·∫£i t·∫ßn s·ªë
  double freqResolution = (double)SAMPLE_RATE / SAMPLES; // ~31.25 Hz

  // ==== Ph√¢n t√≠ch c√°c d·∫£i t·∫ßn ====
  double bassSum = 0, midSum = 0, trebleSum = 0;
  int bassCount = 0, midCount = 0, trebleCount = 0;

  double maxMagnitude = 0;
  int maxIndex = 0;

  for (int i = 1; i < SAMPLES / 2; i++) { // B·ªè DC component (i=0)
    double freq = i * freqResolution;
    double magnitude = vReal[i];

    // T√¨m t·∫ßn s·ªë m·∫°nh nh·∫•t
    if (magnitude > maxMagnitude) {
      maxMagnitude = magnitude;
      maxIndex = i;
    }

    // Ph√¢n lo·∫°i theo d·∫£i t·∫ßn
    if (freq >= 20 && freq < 250) {
      bassSum += magnitude;
      bassCount++;
    } else if (freq >= 250 && freq < 2000) {
      midSum += magnitude;
      midCount++;
    } else if (freq >= 2000 && freq < 8000) {
      trebleSum += magnitude;
      trebleCount++;
    }
  }

  // T√≠nh trung b√¨nh (GI·ªÆ NGUY√äN MAGNITUDE - KH√îNG CHUY·ªÇN SANG dB)
  soundData.bassLevel = bassCount > 0 ? (bassSum / bassCount) : 0;
  soundData.midLevel = midCount > 0 ? (midSum / midCount) : 0;
  soundData.trebleLevel = trebleCount > 0 ? (trebleSum / trebleCount) : 0;
  soundData.dominantFreq = maxIndex * freqResolution;
}

void setup() {
  Serial.begin(115200);
  delay(1000);
  setupI2S();
}

void loop() {
  size_t bytes_read;
  int32_t buffer[SAMPLES];
  
  // ƒê·ªçc d·ªØ li·ªáu t·ª´ mic
  i2s_read(I2S_NUM_0, (void*)buffer, sizeof(buffer), &bytes_read, portMAX_DELAY);

  // T√≠nh t·ªïng dB (RMS)
  double rms = calculateRMS(buffer, SAMPLES);
  if (rms < 0.0000001) rms = 0.0000001;
  soundData.dB = 20 * log10(rms) + 94;

  // Ph√¢n t√≠ch FFT
  analyzeFFT(buffer);

  // In gi√° tr·ªã
  Serial.printf("%.1f,%.6f,%.6f,%.6f,%.0f\n", 
    soundData.dB,
    soundData.bassLevel,
    soundData.midLevel,
    soundData.trebleLevel,
    soundData.dominantFreq
  );
  
  delay(20);
}
