void handleData() {
  String json = "{";
  json += "\"mic\":[" + String(P_muot_values[0]) + "," + String(P_muot_values[1]) + "," + String(P_muot_values[2]) + "," + String(P_muot_values[3]) + "],";
  json += "\"baseline\":[" + String(P_baseline[0]) + "," + String(P_baseline[1]) + "," + String(P_baseline[2]) + "," + String(P_baseline[3]) + "],";
  json += "\"zones\":[" + String(P_est_zones[0]) + "," + String(P_est_zones[1]) + "," + String(P_est_zones[2]) + "," + String(P_est_zones[3]) + "],";
  json += "\"mode\":" + String(count) + ",";
  json += "\"dB\":" + String(dB_hien_tai) + ",";
  json += "\"baselineSaved\":" + String(baseline_da_luu ? "true" : "false") + ",";
  json += "\"thresholdActive\":" + String(dang_vuot_nguong ? "true" : "false");
  json += "}";
  server.send(200, "application/json", json);
}

void handleSetMode() {
  if (server.hasArg("mode")) {
    count = server.arg("mode").toInt();
    if (count < 0) count = 0;
    if (count > 2) count = 2;
  }
  server.send(200, "text/plain", "OK");
}

void handleResetBaseline() {
  // Reset baseline
  baseline_da_luu = false;
  baseline_start_time = millis();
  baseline_count = 0;
  for (int i = 0; i < 4; i++) {
    baseline_sum[i] = 0.0;
    P_baseline[i] = 0.0;
  }
  Serial.println("=== RESET BASELINE - BAT DAU DO LAI ===");
  server.send(200, "text/plain", "OK");
}

void handleSetMicMin() {
  if (server.hasArg("value")) {
    P_NGUONG_MIC_MIN = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void handleSetMode1() {
  if (server.hasArg("value")) {
    P_NGUONG_MODE_1 = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void handleSetMode2() {
  if (server.hasArg("value")) {
    P_NGUONG_MODE_2 = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void handleSetStartMode1() {
  if (server.hasArg("value")) {
    DB_NGUONG_BAT_DAU_MODE_1 = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void handleSetStartMode2() {
  if (server.hasArg("value")) {
    DB_NGUONG_BAT_DAU_MODE_2 = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void handleSetYellow() {
  if (server.hasArg("value")) {
    PHAN_TRAM_VANG = server.arg("value").toFloat();
  }
  server.send(200, "text/plain", "OK");
}

void resetToGreenLEDs() {
  // ƒê·∫∑t t·∫•t c·∫£ LED v·ªÅ m√†u xanh
  for (int i = 0; i < LED_VUNG_COUNT; i++) {
    strip_Vung.setPixelColor(i, strip_Vung.Color(0, 255, 0));
  }
  strip_Vung.show();
  
  // Reset gi√° tr·ªã zones
  for (int i = 0; i < NUM_ZONES; i++) {
    P_est_zones[i] = 0.0;
  }
}

void setup() {
  Serial.begin(115200);
  Serial.println("ESP32 Noise Monitor with Dynamic Baseline");
  
  pinMode(BUTTON_PIN, INPUT_PULLUP);
  attachInterrupt(digitalPinToInterrupt(BUTTON_PIN), handleButtonInterrupt, FALLING);

  // Kh·ªüi t·∫°o WiFi AP
  WiFi.softAP(ssid, password);
  IPAddress IP = WiFi.softAPIP();
  Serial.print("AP IP address: ");
  Serial.println(IP);

  // Kh·ªüi t·∫°o ESP-NOW
  WiFi.mode(WIFI_AP_STA);
  if (esp_now_init() != ESP_OK) {
    Serial.println("Loi khoi tao ESP-NOW");
    return;
  }
  esp_now_register_recv_cb(OnDataRecv);

  // Kh·ªüi t·∫°o Web Server
  server.on("/", handleRoot);
  server.on("/data", handleData);
  server.on("/setMode", handleSetMode);
  server.on("/resetBaseline", handleResetBaseline);
  server.on("/setMicMin", handleSetMicMin);
  server.on("/setMode1", handleSetMode1);
  server.on("/setMode2", handleSetMode2);
  server.on("/setStartMode1", handleSetStartMode1);
  server.on("/setStartMode2", handleSetStartMode2);
  server.on("/setYellow", handleSetYellow);
  server.begin();
  
  Serial.println("Web server started!");
  
  strip_Vung.begin();
  strip_Vung.setBrightness(10);
  strip_Vung.clear();
  
  strip_Mode.begin();
  strip_Mode.setBrightness(10);
  strip_Mode.setPixelColor(0, strip_Mode.Color(100, 100, 100));
  
  strip_Vung.show();
strip_Mode.show();
// B·∫Øt ƒë·∫ßu ƒëo baseline
baseline_start_time = millis();
Serial.println("=== BAT DAU DO BASELINE (3 giay) ===");
}
void loop() {
  server.handleClient();
  
  unsigned long current_time = millis();
  for (int i = 0; i < NUM_MICS; i++) {
    if (current_time - last_receive_time[i] > MIC_TIMEOUT) {
      P_muot_values[i] = 0.0;
    }
  }
  
  // C·∫≠p nh·∫≠t baseline n·∫øu ch∆∞a l∆∞u
  cap_nhat_baseline();
  
  // T√≠nh gi√° tr·ªã dB hi·ªán t·∫°i
  dB_hien_tai = tinh_dB();
  
  // Debug output
  static unsigned long last_debug = 0;
  if (millis() - last_debug > 1000) {
    last_debug = millis();
    Serial.print("P_muot: [");
    Serial.print(P_muot_values[0]); Serial.print(", ");
    Serial.print(P_muot_values[1]); Serial.print(", ");
    Serial.print(P_muot_values[2]); Serial.print(", ");
    Serial.print(P_muot_values[3]); Serial.print("] | dB: ");
    Serial.print(dB_hien_tai);
    if (count > 0) {
      float dB_nguong = (count == 1) ? DB_NGUONG_BAT_DAU_MODE_1 : DB_NGUONG_BAT_DAU_MODE_2;
      Serial.print(" | Nguong: "); Serial.print(dB_nguong);
      Serial.print(" | Trang thai: "); Serial.println(dang_vuot_nguong ? "VUOT" : "DUOI");
    } else {
      Serial.println(" | MODE 0");
    }
  }
  
  if (buttonPressed) {
    portENTER_CRITICAL(&mux);
    buttonPressed = false;
    portEXIT_CRITICAL(&mux);

    count++;
    if (count > 2) count = 0;
    
    // Reset tr·∫°ng th√°i khi chuy·ªÉn mode
    dang_vuot_nguong = false;
    trang_thai_truoc = false;
    
    if (count == 0) {
      Serial.println("MODE 0: IDLE");
      strip_Vung.clear();
      strip_Vung.show();
      strip_Mode.setPixelColor(0, strip_Mode.Color(100, 100, 100));
      strip_Mode.show();
    } else if (count == 1) {
      Serial.println("MODE 1: BINH THUONG (>=65dB)");
      strip_Mode.setPixelColor(0, strip_Mode.Color(0, 255, 0));
      strip_Mode.show();
      resetToGreenLEDs();
      reset_ve_baseline();  // Reset v·ªÅ baseline khi chuy·ªÉn mode
    } else {
      Serial.println("MODE 2: YEN TINH (>=62dB)");
      strip_Mode.setPixelColor(0, strip_Mode.Color(255, 0, 0));
      strip_Mode.show();
      resetToGreenLEDs();
      reset_ve_baseline();  // Reset v·ªÅ baseline khi chuy·ªÉn mode
    }
  }

  if (count == 0) {
    // MODE 0 - kh√¥ng l√†m g√¨
    dang_vuot_nguong = false;
  } else if (baseline_da_luu) {  // Ch·ªâ x·ª≠ l√Ω khi ƒë√£ c√≥ baseline
    // X√°c ƒë·ªãnh ng∆∞·ª°ng dB theo mode
    float dB_nguong = (count == 1) ? DB_NGUONG_BAT_DAU_MODE_1 : DB_NGUONG_BAT_DAU_MODE_2;
    
    // Ki·ªÉm tra xem c√≥ v∆∞·ª£t ng∆∞·ª°ng dB kh√¥ng
    if (dB_hien_tai >= dB_nguong) {
      if (!dang_vuot_nguong) {
        Serial.print("Vuot nguong dB: ");
        Serial.print(dB_hien_tai);
        Serial.print(" >= ");
        Serial.println(dB_nguong);
      }
      dang_vuot_nguong = true;
    } else {
      // N·∫øu gi·∫£m xu·ªëng d∆∞·ªõi ng∆∞·ª°ng
      if (dang_vuot_nguong) {
        Serial.print("Giam xuong duoi nguong dB: ");
        Serial.print(dB_hien_tai);
        Serial.print(" < ");
        Serial.print(dB_nguong);
        Serial.println(" - Ghi nhan thay doi trang thai");
        dang_vuot_nguong = false;
        resetToGreenLEDs();
      }
    }
    
    // ‚úÖ CH·ªà RESET KHI C√ì S·ª∞ THAY ƒê·ªîI TR·∫†NG TH√ÅI
    if (trang_thai_truoc != dang_vuot_nguong) {
      Serial.println("!!! TRANG THAI THAY DOI - RESET VE BASELINE !!!");
      reset_ve_baseline();
      trang_thai_truoc = dang_vuot_nguong;
    }
    
    // Ch·ªâ t√≠nh IDW v√† hi·ªÉn th·ªã v·ªã tr√≠ khi v∆∞·ª£t ng∆∞·ª°ng dB
    if (dang_vuot_nguong) {
      // T√≠nh IDW
      for (int i = 0; i < NUM_ZONES; i++) {
        float vung_x = ZONE_CENTERS[i][0];
        float vung_y = ZONE_CENTERS[i][1];
        double tong_trong_so = 0.0;
        double tong_P_nhan_trong_so = 0.0;
        int mic_co_tin_hieu = 0;
        
        for (int j = 0; j < NUM_MICS; j++) {
          if (P_muot_values[j] < P_NGUONG_MIC_MIN) continue;
          
          mic_co_tin_hieu++;
          float mic_x = MIC_POSITIONS[j][0];
          float mic_y = MIC_POSITIONS[j][1];
          double d = tinh_khoang_cach(vung_x, vung_y, mic_x, mic_y);
          double w = (d > 0.001) ? (1.0 / d*d*d) : 10000.0;
          
          tong_trong_so += w;
          tong_P_nhan_trong_so += P_muot_values[j] * w;
        }
        
        P_est_zones[i] = (mic_co_tin_hieu == 0 || tong_trong_so == 0.0) ? 0.0 : (tong_P_nhan_trong_so / tong_trong_so);
      }
      
      // T√¨m P_max c·ªßa c√°c zones
      float P_max = 0.0;
      for (int i = 0; i < NUM_ZONES; i++) {
        if (P_est_zones[i] > P_max) P_max = P_est_zones[i];
      }
      
      // T√≠nh ng∆∞·ª°ng v√†ng
      float P_nguong_min = (count == 1) ? P_NGUONG_MODE_1 : P_NGUONG_MODE_2;
      float P_nguong_vang = P_max * PHAN_TRAM_VANG;
      if (P_nguong_vang < P_nguong_min) P_nguong_vang = P_nguong_min;

      // Hi·ªÉn th·ªã LED theo v√πng
      for (int i = 0; i < NUM_ZONES; i++) {
        int led1 = ZONE_TO_LED_MAP[i][0];
        int led2 = ZONE_TO_LED_MAP[i][1];
        int led3 = ZONE_TO_LED_MAP[i][2];
        int led4 = ZONE_TO_LED_MAP[i][3];

        uint32_t color;
        if (P_est_zones[i] >= P_max && P_max > P_nguong_min) {
          color = strip_Vung.Color(255, 0, 0);  // ƒê·ªè
        } else if (P_est_zones[i] > P_nguong_vang) {
          color = strip_Vung.Color(255, 150, 0);  // V√†ng
        } else {
          color = strip_Vung.Color(0, 255, 0);  // Xanh
        }
        
        strip_Vung.setPixelColor(led1, color);
        strip_Vung.setPixelColor(led2, color);
        strip_Vung.setPixelColor(led3, color);
        strip_Vung.setPixelColor(led4, color);
      }
      strip_Vung.show();
    } else {
      // D∆∞·ªõi ng∆∞·ª°ng - gi·ªØ LED xanh
      resetToGreenLEDs();
    }
  }
  
  delay(200);
}
