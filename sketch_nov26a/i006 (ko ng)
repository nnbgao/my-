#include <esp_now.h>
#include <WiFi.h>
#include <WebServer.h>
#include <cmath>
#include <Adafruit_NeoPixel.h>

// --- C·∫•u h√¨nh ch√¢n ---
const int BUTTON_PIN = 12;

// --- D·∫¢I LED ---
#define LED_VUNG_PIN    23
#define LED_VUNG_COUNT  16
Adafruit_NeoPixel strip_Vung(LED_VUNG_COUNT, LED_VUNG_PIN, NEO_GRB + NEO_KHZ800);

#define LED_MODE_PIN    19 
Adafruit_NeoPixel strip_Mode(1, LED_MODE_PIN, NEO_GRB + NEO_KHZ800);

// --- GI√Å TR·ªä T√çN HI·ªÜU ---
volatile float P_muot_values[4] = {0.0, 0.0, 0.0, 0.0}; 
unsigned long last_receive_time[4] = {0, 0, 0, 0};

// --- BASELINE ƒê·ªòNG (3 gi√¢y ƒë·∫ßu) ---
float P_baseline[4] = {0.0, 0.0, 0.0, 0.0};  // Gi√° tr·ªã baseline cho m·ªói mic
bool baseline_da_luu = false;
unsigned long baseline_start_time = 0;
const unsigned long BASELINE_DURATION = 3000;  // 3 gi√¢y
float baseline_sum[4] = {0.0, 0.0, 0.0, 0.0};
int baseline_count = 0;

// --- Ng∆∞·ª°ng (C√ì TH·ªÇ THAY ƒê·ªîI QUA WEB) ---
float P_NGUONG_MODE_1 = 420.0;
float P_NGUONG_MODE_2 = 350.0;
float P_NGUONG_MIC_MIN = 270.0;
float PHAN_TRAM_VANG = 0.75;

// --- Ng∆∞·ª°ng dB th·ª±c ƒë·ªÉ b·∫≠t t√≠nh nƒÉng x√°c ƒë·ªãnh v·ªã tr√≠ ---
float DB_NGUONG_BAT_DAU_MODE_1 = 62.2;  // 65 dB cho Mode 1
float DB_NGUONG_BAT_DAU_MODE_2 = 59.5;  // 62 dB cho Mode 2

// --- Bi·∫øn l∆∞u gi√° tr·ªã dB hi·ªán t·∫°i ---
float dB_hien_tai = 0.0;

const unsigned long MIC_TIMEOUT = 1000;

// --- Bi·∫øn tr·∫°ng th√°i ---
volatile int count = 0;
volatile bool buttonPressed = false; 
portMUX_TYPE mux = portMUX_INITIALIZER_UNLOCKED; 
unsigned long lastDebounceTime = 0; 
unsigned long debounceDelay = 800;

// --- Bi·∫øn theo d√µi tr·∫°ng th√°i v∆∞·ª£t ng∆∞·ª°ng ---
bool dang_vuot_nguong = false;
bool trang_thai_truoc = false;  // Theo d√µi tr·∫°ng th√°i tr∆∞·ªõc ƒë·ªÉ ph√°t hi·ªán thay ƒë·ªïi

// --- Hi·ªáu chu·∫©n & T·ªça ƒë·ªô ---
float CALIBRATION_FACTORS[4] = {1.189, 1.000, 1.196, 1.083};

const int NUM_MICS = 4;
const float MIC_POSITIONS[NUM_MICS][2] = {
  {0.0, 0.0}, {14.5, 0.0}, {0.0, 10.0}, {14.5, 10.0}
};

const int NUM_ZONES = 4;
const float ZONE_CENTERS[NUM_ZONES][2] = {
  {5.35, 4.72}, {5.35, 8.5}, {11.59, 4.72}, {11.59, 8.5}
};

const int ZONE_TO_LED_MAP[NUM_ZONES][4] = {
  {10, 11, 12, 13},{9, 8, 15, 14},{2,3,4,5},{0,1,6,7}
};

// --- Web Server ---
WebServer server(80);

// --- WiFi AP Config ---
const char* ssid = "ESP32_NoiseMonitor";
const char* password = "12345678";

// --- Bi·∫øn l∆∞u gi√° tr·ªã zones ƒë·ªÉ web ƒë·ªçc ---
float P_est_zones[NUM_ZONES] = {0, 0, 0, 0};

// --- H√ÄM RESET V·ªÄ BASELINE ---
void reset_ve_baseline() {
  Serial.println("--- RESET VE BASELINE ---");
  for (int i = 0; i < 4; i++) {
    P_muot_values[i] = P_baseline[i];
    Serial.print("Mic "); Serial.print(i+1); 
    Serial.print(": "); Serial.println(P_baseline[i]);
  }
}

// --- H√ÄM L∆ØU BASELINE (3 gi√¢y) ---
void cap_nhat_baseline() {
  if (!baseline_da_luu) {
    unsigned long elapsed = millis() - baseline_start_time;
    
    if (elapsed < BASELINE_DURATION) {
      // ƒêang trong qu√° tr√¨nh ƒëo baseline (3 gi√¢y)
      for (int i = 0; i < 4; i++) {
        baseline_sum[i] += P_muot_values[i];
      }
      baseline_count++;
    } else {
      // H·∫øt 3 gi√¢y, t√≠nh trung b√¨nh v√† l∆∞u baseline
      for (int i = 0; i < 4; i++) {
        P_baseline[i] = (baseline_count > 0) ? (baseline_sum[i] / baseline_count) : 0.0;
      }
      baseline_da_luu = true;
      
      Serial.println("=== BASELINE DA DUOC LUU ===");
      for (int i = 0; i < 4; i++) {
        Serial.print("Mic "); Serial.print(i+1); 
        Serial.print(" baseline: "); Serial.println(P_baseline[i]);
      }
    }
  }
}

// --- H√ÄM T√çNH RMS V√Ä dB (D√ôNG MAX) ---
float tinh_dB() {
  // L·∫•y gi√° tr·ªã MAX t·ª´ 4 mic
  float P_max = 0.0;
  for (int i = 0; i < 4; i++) {
    if (P_muot_values[i] > P_max) {
      P_max = P_muot_values[i];
    }
  }

  // ƒê·ªïi sang ƒêi·ªán √°p (Volts Peak-to-Peak)
  float V_pp = P_max * (3.3 / 4095.0);

  // ƒê·ªïi sang RMS
  float V_rms = V_pp * 0.3535;

  // Tr√°nh l·ªói log10(0)
  if (V_rms < 0.00001) V_rms = 0.00001;

  // T√≠nh dB
  float dB_raw = 20 * log10(V_rms) + 80.65;

  return dB_raw;
}

double tinh_khoang_cach(double vung_x, double vung_y, double mic_x, double mic_y) {
  double delta_x = vung_x - mic_x;
  double delta_y = vung_y - mic_y;
  return sqrt(delta_x * delta_x + delta_y * delta_y);
}

typedef struct struct_message {
  int id;
  float p_value;
} struct_message;

void IRAM_ATTR handleButtonInterrupt() {
  if (millis() - lastDebounceTime > debounceDelay) {
    portENTER_CRITICAL_ISR(&mux);
    buttonPressed = true;
    lastDebounceTime = millis();
    portEXIT_CRITICAL_ISR(&mux);
  }
}

void OnDataRecv(const esp_now_recv_info *info, const uint8_t *incomingData, int len) {
  struct_message myData;
  memcpy(&myData, incomingData, sizeof(myData));
  int slave_id = myData.id;
  float p_value_tho = myData.p_value;
  
  if (slave_id >= 1 && slave_id <= 4) {
    int index = slave_id - 1;
    P_muot_values[index] = p_value_tho * CALIBRATION_FACTORS[index];
    last_receive_time[index] = millis();
  }
}

