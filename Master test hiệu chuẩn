/*
 * CODE MASTER (ĐƠN GIẢN HÓA ĐỂ TEST VÀ HIỆU CHUẨN)
 * Nhiệm vụ: Nhận 4 giá trị P_mượt từ 4 Slave và in ra Serial Monitor.
 */

#include <esp_now.h>
#include <WiFi.h>

// Mảng 4 phần tử để lưu 4 giá trị P_mượt
// Dùng 'volatile' vì nó bị thay đổi bởi hàm Callback (ngắt)
volatile float P_muot_values[4] = {0.0, 0.0, 0.0, 0.0};

// Cấu trúc dữ liệu (PHẢI GIỐNG HỆT BÊN SLAVE)
typedef struct struct_message {
  int id;
  float p_value;
} struct_message;

// --- HÀM CALLBACK KHI NHẬN DỮ LIỆU ---
// (Sẽ tự động chạy khi nhận được tin nhắn)
void OnDataRecv(const esp_now_recv_info * info, const uint8_t *incomingData, int len) {
  
  struct_message myData;
  memcpy(&myData, incomingData, sizeof(myData)); // Giải nén dữ liệu

  // Phân loại dữ liệu dựa trên ID mà Slave gửi
  int slave_id = myData.id;
  float p_value = myData.p_value;

  // Cập nhật giá trị vào đúng mảng
  // (Trừ 1 vì ID bắt đầu từ 1, nhưng chỉ số mảng bắt đầu từ 0)
  if (slave_id >= 1 && slave_id <= 4) {
    P_muot_values[slave_id - 1] = p_value;
  }
  
  // (Bạn có thể in địa chỉ MAC của slave vừa gửi để kiểm tra)
  // Serial.print("Nhan du lieu tu: ");
  // for (int i = 0; i < 6; i++) {
  //   Serial.printf("%02X", info->src_addr[i]);
  //   if (i < 5) Serial.print(":");
  // }
  // Serial.printf(" | ID: %d | P: %.0f\n", slave_id, p_value);
}

// --- HÀM SETUP ---
void setup() {
  Serial.begin(115200);
  Serial.println("Day la MASTER (Ban Test). Dang lang nghe...");
  
  WiFi.mode(WIFI_STA);

  // Khởi tạo ESP-NOW
  if (esp_now_init() != ESP_OK) {
    Serial.println("Loi khoi tao ESP-NOW");
    return;
  }
  
  // Đăng ký Hàm Callback Nhận Dữ liệu (Quan trọng nhất)
  esp_now_register_recv_cb(OnDataRecv);
}

// --- HÀM LOOP ---
void loop() {
  
  // In 4 giá trị P_mượt ra Serial Monitor (Để kiểm tra hiệu chuẩn)
  // %.0f = In số thực (float) nhưng không có phần thập phân
  Serial.printf("P_Slave_1: %.0f | P_Slave_2: %.0f | P_Slave_3: %.0f | P_Slave_4: %.0f \n",
                P_muot_values[0],
                P_muot_values[1],
                P_muot_values[2],
                P_muot_values[3]);

  delay(200); // Cập nhật màn hình 5 lần/giây
}
